<div id="all_posts">
		====================================================================================================
	<% @posts.reverse.each do |post| %>
		<div id="indiv_post">
			<h1><%= link_to post.title.humanize, post %></h1>
				<%= post.message %>
				<br />
				Submitted By:  <%= User.find(post.uid).username.humanize %>
				<br />
				<br />
				<% if current_user && current_user.id == post.uid %> 
					<%= link_to 'Edit', edit_post_path(post) %> | <%= link_to 'Delete', post, method: :delete, :confirm => 'Are you sure?' %>
				<% end %>
		</div>
		====================================================================================================
	<% end %>
</div>	
<br />

<p style="text-align: center"><%= link_to 'New Post', new_post_path %></p>
		