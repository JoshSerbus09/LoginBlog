
<div class="show_post">
	<h1><u><%= @post.title %></u></h1>
		<%= @post.message %>
		<br />
	<p>Submitted By: <%= User.find(@post.uid).username.humanize %></p>
	<br />

	<% if current_user && current_user.id == @post.uid %>
		<%= link_to 'Edit', edit_post_path(@post) %> | <%= link_to 'Delete', :method => :delete, :confirm => 'Are you sure?' %> | <%= link_to 'Back to Posts', posts_path %>
	<% end %>
</div>